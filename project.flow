{

  project : {

      //These first two are required
    name : 'solitaire',
    version : '0.3.0',
    author : 'Anders Nissen',

      //This configures your app.
      //The package is important, it's used 
      //for save locations, initializing mobile project files etc
    app : {
      name : 'solitaire',
      package : 'anissen.solitaire',

      mobile: {
        orientation: portrait
      },

      icon: 'asset_sources/icons'
    },

      //This configures the build process
    build : {
      dependencies : {
        luxe : '*'
      },
      defines : [
        'NO_PRECOMPILED_HEADERS',
        'absolute-path'
      ]
    },

      //Copies over all the assets to the output
    files : {
        config : 'config.json',
        assets : 'assets/',
        index : { path: 'index.html => index.html' }
    }

  } //project

}

